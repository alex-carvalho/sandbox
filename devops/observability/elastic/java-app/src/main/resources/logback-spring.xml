<?xml version="1.0" encoding="UTF-8"?>
<configuration>
    <property name="LOG_FILE" value="logs/app.log"/>
    <property name="LOG_FILE_MAX_SIZE" value="10MB"/>
    <property name="LOG_FILE_MAX_HISTORY" value="10"/>

    <!-- Console Appender with Color -->
    <appender name="CONSOLE" class="ch.qos.logback.core.ConsoleAppender">
        <encoder class="net.logstash.logback.encoder.LogstashEncoder">
            <fieldName>@timestamp</fieldName>
            <timeZone>UTC</timeZone>
            <version>1</version>
            <customFields>{"service":"elastic-stack-demo","environment":"testing"}</customFields>
        </encoder>
    </appender>

    <!-- JSON File Appender for Filebeat -->
    <appender name="JSON_FILE" class="ch.qos.logback.core.rolling.RollingFileAppender">
        <file>${LOG_FILE}</file>
        <rollingPolicy class="ch.qos.logback.core.rolling.SizeAndTimeBasedRollingPolicy">
            <fileNamePattern>logs/app-%d{yyyy-MM-dd}-%i.log.zip</fileNamePattern>
            <maxFileSize>${LOG_FILE_MAX_SIZE}</maxFileSize>
            <maxHistory>${LOG_FILE_MAX_HISTORY}</maxHistory>
            <totalSizeCap>1GB</totalSizeCap>
        </rollingPolicy>
        <encoder class="net.logstash.logback.encoder.LogstashEncoder">
            <fieldName>@timestamp</fieldName>
            <timeZone>UTC</timeZone>
            <version>1</version>
            <customFields>{"service":"elastic-stack-demo","environment":"testing"}</customFields>
            <includeContext>true</includeContext>
            <includeMdcX>true</includeMdcX>
            <includeCallerInfo>false</includeCallerInfo>
        </encoder>
    </appender>

    <!-- Async Appender for better performance -->
    <appender name="ASYNC_JSON_FILE" class="ch.qos.logback.classic.AsyncAppender">
        <queueSize>512</queueSize>
        <discardingThreshold>0</discardingThreshold>
        <appender-ref ref="JSON_FILE"/>
    </appender>

    <root level="INFO">
        <appender-ref ref="CONSOLE"/>
        <appender-ref ref="ASYNC_JSON_FILE"/>
    </root>

    <!-- Application loggers -->
    <logger name="com.elastic.test" level="DEBUG"/>
    <logger name="org.springframework.web" level="INFO"/>
    <logger name="org.springframework.boot" level="INFO"/>
</configuration>
