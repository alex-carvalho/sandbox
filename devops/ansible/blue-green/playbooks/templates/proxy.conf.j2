upstream app_backend {
    server {{ active_host }}:80;
}

server {
    listen 80;

    location / {
        proxy_pass         http://app_backend;
        proxy_set_header   Host $host;
        proxy_set_header   X-Real-IP $remote_addr;
        add_header         X-Active-Slot "{{ active_slot }}";
    }
}
